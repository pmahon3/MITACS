CC = gcc
CFLAGS = -Wall -Wextra -Iinclude
LDFLAGS =
SRC_DIR = src
OBJ_DIR = obj
BIN_DIR = bin
INCLUDE_DIR = include

SRC_FILES = $(wildcard $(SRC_DIR)/*.c)
OBJ_FILES = $(patsubst $(SRC_DIR)/%.c, $(OBJ_DIR)/%.o, $(SRC_FILES))
MAIN_OBJ = $(OBJ_DIR)/main.o

TARGET = $(BIN_DIR)/main

all: $(TARGET)

$(TARGET): $(OBJ_FILES) $(MAIN_OBJ) | $(BIN_DIR)
	$(CC) $(LDFLAGS) -o $@ $^

$(OBJ_DIR)/%.o: $(SRC_DIR)/%.c | $(OBJ_DIR)
	$(CC) $(CFLAGS) -o $@ -c $<

$(MAIN_OBJ): main.c | $(OBJ_DIR)
	$(CC) $(CFLAGS) -o $@ -c $<

$(BIN_DIR) $(OBJ_DIR) $(INCLUDE_DIR):
	mkdir -p $@

clean:
	rm -rf $(OBJ_DIR) $(BIN_DIR)

.PHONY: all clean
